{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "arrow-body-style": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/test/**/*.js"]}],
    "no-bitwise": ["error", { "allow": ["|"] }],
    "no-underscore-dangle": "off",
    "strict": "off",
    "import/no-unresolved": [2, { "ignore": ["gulp-typescript"] }],
    "jsx-a11y/href-no-hash": "off",
    "comma-dangle": "off"
  }
}
